
<div class="container-search">
  <h2><strong>Votre recherche est présentée par ... </strong></h2>
  <h2 class="underline-details">Les offres que vous recherchez</h2>
</div>

<% if @filtered_results.empty? %>
  <div class="check-events best-events">
    <div class="card-section-title">
      <h3>Jette un coup d'oeil aux évènements de <%= @city.name %></h3>
      <p><i class="fas fa-angle-double-right"></i> Tous les evènements</p>
    </div>
    <div class="events-with-slick evenement-card-flexbox">
      <% @events.each do |event| %>
        <%= render partial: 'shared/city_show_event_card', locals: {event: event} %>
      <% end %>
    </div>
  </div>
  <div class="check-offers">
    <div class="card-section-title">
      <h3>Tu peux aussi checker les offres des magasins de <%= @city.name %></h3>
      <p><i class="fas fa-angle-double-right"></i> Toutes les offres</p>
    </div>
    <div class="events-with-slick">
      <% @events.each do |event| %>
        <%= link_to city_shop_path(@city, event.shop) do %>
          <div class="event-free_card hover-on-card-to-description">
            <div class="event-info_section">
              <div class="event-free_header hover-on-card-to-description">
                <h3><strong><%= event.category %></strong></h3>
                <h5><%= event.shop.name %></h5>
                <h5><%= event.name %></h5>
                <h5>Jusqu'au <%= event.end_date.day %> <%= @months["#{event.end_date.month}"] %> <%= event.end_date.year %></h5>
                <p><%= event.description %></p>
              </div>
            </div>
            <div class="event-blur_back" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path event.event_photos.first.photo, crop: :fill %>');"></div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
<% else %>
  <% if params[:query_shops] == "events" %>
    <div class="events-no-slick col-xs-12">
      <% @filtered_results.each do |event| %>
        <div class="col-xs-12 col-sm-4">
          <%= render partial: 'shared/search_show_event_card', locals: {event: event} %>
        </div>
      <% end %>
    </div>
  <% elsif params[:query_shops] == "offers" %>
    <div class="events-no-slick col-xs-12">
      <% @filtered_results.each do |event| %>
        <div class="col-xs-12 col-sm-4 check-that-bottom-margin">
          <%= link_to city_shop_path(@city, event.shop) do %>
            <div class="event-free_card hover-on-card-to-description">
              <div class="event-info_section">
                <div class="event-free_header hover-on-card-to-description">
                  <h3><strong><%= event.category %></strong></h3>
                  <h5><%= event.shop.name %></h5>
                  <h5><%= event.name %></h5>
                  <h5>Jusqu'au <%= event.end_date.day %> <%= @months["#{event.end_date.month}"] %> <%= event.end_date.year %></h5>
                  <p><%= event.description %></p>
                </div>
              </div>
              <div class="event-blur_back" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path event.event_photos.first.photo, crop: :fill %>');"></div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>
