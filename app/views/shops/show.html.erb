<div class="container">
  <div class="row">
    <div class="col-md-4 col-sm-offset-4">
      <div class="shop-show-main">
        <h2><%= @shop.name %></h2>
        <p><%= @shop.address %></p>
        <div class="open-status">
          <p> Ouvert </p>
        </div>
      </div>
    </div>
  </div>


  <div class="shop-content">

    <div class="shop-feed">
      <h6>Les dernières offres et évènements de <%= @shop.name %> </h6>
      <% @shop.events.each do |event| %>

        <div class="event-card-feed">
          <%= event.name %>
        </div>
      <% end %>
    </div>

    <div class="shop-info-map">

      <div class="shop-info">
        <p> Téléphone : <%= @shop.phone_number %></p>
        <p> Adresse : <%= @shop.address %> </p>
        <p> Website : </p>
        <p> Horaires :</p>
      </div>

      <div class="shop-map">
        <div id="map"
          style="width: 100%"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
        ></div>
      </div>

    </div>

  </div>
</div>

