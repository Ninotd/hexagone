<div class="shop-cards__item col-xs-12 col-sm-4" data-favorite-id="<%= favorite.id %>">
  <div class="shop-card">
    <div class="shop-card__image shop-card__image--fence" style="background-image: url('<%= cl_image_path shop.shop_photos.first.photo, :width=>360, :height=>240, :crop=>"scale" %>');"></div>
    <div class="shop-card-category">
      <h3><%= shop.category %></h3>
    </div>
    <div class="shop-card__content">
      <div class="shop-card__title"> <%= shop.name %> </div>
      <p class="shop-card__text"> <%= shop.address %> </p>
      <%= link_to "Voir cette boutique", city_shop_path(@city, shop), class: "shop-btn shop-btn--block shop-card__btn hover-background-to-appear" %>
    </div>
  </div>
  <div class="add-to-favorite-link">
    <%= link_to favorite_path(favorite), method: :delete, data: { confirm: "Etes-vous sÃ»r de supprimer cette boutique ?" }, remote: true do %>
      <button type="button" data-shop-id="<%= shop.id %>" class="btn btn-secondary add-to-calendar-button js-calendar-button">
        <div class="button-to-calendar-description">
          Supprimer des favoris
        </div>
        <i class="fas fa-trash-alt"></i>
      </button>
    <% end %>
  </div>
</div>
